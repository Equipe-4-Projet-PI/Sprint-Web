{% extends 'home.html.twig' %}

{% block title %}{{ discussion.receiver.username }}{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: black; /* Changement de la couleur de fond en noir */
            margin: 0;
            padding: 0;
            color: white; /* Changement de la couleur du texte en blanc */
        }

        .message-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-top: 20px; /* Ajustement de la marge supérieure */
        }

        .message {
            margin-bottom: 20px; /* Ajustement de l'espacement entre les messages */
            max-width: 70%;
            padding: 10px;
            border-radius: 15px;
            word-wrap: break-word;
            position: relative;
            display: flex;
            align-items: center; /* Ajustement pour centrer le contenu des messages */
        }

        .sender-message {
            background-color: rgba(39, 167, 118, 0.8);
            color: white;
            align-self: flex-end;
            margin-left: auto;
            margin-right: 20px;
        }

        .receiver-message {
            background-color: rgba(51, 109, 125, 0.8); /* Changement de la couleur en noir transparent */
            color: white;
            align-self: flex-start;
            margin-right: 20px;
        }

        .message-content {
            max-width: 300px; /* Ajustement pour limiter la largeur du contenu des messages */
        }

        .message p {
            margin: 5px 0; /* Ajustement de la marge autour du texte des messages */
        }

        .message p em {
            font-size: 12px;
            color: #777;
            margin-top: 5px;
            display: block;
        }

        .sender-img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-left: 10px;
            margin-right: 10px; /* Ajustement de la marge à droite */
        }

        .delete-button {
            margin-left: 10px;
            background: none;
            border: none;
            cursor: pointer;
            position: absolute; /* Position absolue pour placer le bouton */
            top: 50%;
            left: -30px; /* Ajustement de la position du bouton par rapport à la bulle */
            transform: translateY(-50%);
        }

        .delete-button img {
            width: 20px;
            height: auto;
        }

        .custom-button {
            background-color: rgba(39, 167, 118, 0.8);
            color: white;
            margin-right: 10px;
            padding: 10px 20px; /* Ajustement de la taille des boutons de haut */
            border: none;
            border-radius: 5px;
            text-decoration: none;
            opacity: 0.8;
        }

        .title-container {
            text-align: center;
            margin-top: 20px;
        }

        .form-container {
            text-align: center;
            margin-top: 20px;
        }

        .form-wrapper {
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            width: 600px;
            height: 80px;
            margin: auto;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            justify-content: center;
        }

        .form-control {
            width: 80%;
            max-width: 300px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            height: auto;
            resize: none;
            font-size: 14px;
        }

        .custom-button-envoyer {
            width: 150px; /* Ajustement de la largeur du bouton Envoyer */
            height: 60px; /* Ajustement de la hauteur du bouton Envoyer */
            margin-left: 10px;
            opacity: 0.8;
        }

        .custom-button-emoji {
            opacity: 0.8;
            margin-left: 10px;
        }

        .custom-button-retour {
            margin-right: auto;
        }

        .custom-button-extremite {
            margin-left: auto;
        }

        .image_de_receiver {
            width: 70px; /* Ajustement de la largeur de l'image de la femme */
            height: 70px; /* Ajustement de la hauteur de l'image de la femme */
            border-radius: 50%;
            margin-right: 10px;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/emoji-picker-element"></script>

    <br>
    <br>
    <br>
    <br>

    <h1 class="title-container">{{ discussion.receiver.username }}</h1>
    <br>
    <br>
    <a href="{{ path('app_discussion_index') }}" class="custom-button custom-button custom-button-extremite custom-button-retour">
        <img src="{{ asset('img/discussion/bouton-retour.png') }}" alt="Retour aux discussions" style="width: 50px; height: auto;"> <!-- Ajustement de la taille du bouton Retour -->
    </a>
    <a href="{{ path('app_discussion_delete', {'iddis': discussion.iddis}) }}" class="custom-button">Supprimer</a>
    <a href="{{ path('app_discussion_signal', {'iddis': discussion.iddis}) }}" class="custom-button ">Signaler</a>
    <br>
    <br>
    <br>
    <div class="message-container">
        {% for message in messages %}
            {% if message.idsender == discussion.idsender %}
                <div class="message sender-message">
                    <div style="display: flex; align-items: center;">
                        <p>{{ message.content }}</p>
                        <p><em>Envoyé le {{ message.datasent ? message.datasent|date('Y-m-d H:i:s') : '' }}</em></p>
                    </div>
                    <img src="{{ asset('img/discussion/homme.png') }}" alt="Image de {{ discussion.receiver.username }}" class="sender-img">
                </div>
                <button class="delete-button">
                    <a href="{{ path('app_message_delete', {'idmsg': message.idmsg}) }}" class="custom-button "><img src="{{ asset('img/discussion/annuler.png') }}" alt="Supprimer" style="width: 20px; height: auto;"></a>
                </button>
            {% else %}
                <div class="message receiver-message">
                    <img src="{{ asset('img/discussion/femme.png') }}" alt="Image de {{ discussion.receiver.username }}" class="image_de_receiver">
                    <div class="message-content">
                        <p>{{ message.content }}</p>
                        <p><em>Envoyé le {{ message.datasent ? message.datasent|date('Y-m-d H:i:s') : '' }}</em></p>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <p>Aucun message trouvé pour cette discussion.</p>
        {% endfor %}
    </div>

    <div class="form-container">
        <div class="form-wrapper">
            <!-- Début du formulaire -->
            {{ form_start(form, {'attr': {'class': 'message-form'}}) }}
                <div class="form-group">
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 3}, 'label': false}) }}
                    <button type="submit" class="custom-button custom-button-envoyer">        
                        <img src="{{ asset('img/discussion/envoyer.png') }}" alt="Retour aux discussions" style="width: 35px; height: auto;">
                    </button>
                    <button id="emoji-picker-button" class="custom-button custom-button-emoji">        
                        <img src="{{ asset('img/discussion/emoji.png') }}" alt="emojis" style="width: 35px; height: auto;">
                    </button>
                </div>
            {{ form_end(form) }}
            <!-- Fin du formulaire -->
        </div>
    </div>

    <script>
        const button = document.querySelector('#emoji-picker-button');
        const picker = new EmojiPicker();
        picker.on('emoji', emoji => {
            document.querySelector('.form-control').value += emoji;
        });
        button.addEventListener('click', () => {
            picker.togglePicker(button);
        });
    </script>

{% endblock %}
