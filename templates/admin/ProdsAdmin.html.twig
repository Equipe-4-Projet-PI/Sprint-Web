{% extends 'Admin.html.twig' %}
{% block content %}
<li style="
    padding: 24px;
    background: var(--light);
    border-radius: 20px;
">
			<div class="left">
					<h1 style="
    font-size: 30px;
    font-weight: 600;
    margin-bottom: 10px;
    color: var(--dark);
">Table of Prods</h1>
					
				</div>
				

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
		
        <tr>
		    <th style="background:#144CCC;" >Prod ID</th>
            <th style="background:#144CCC;"></th>
            <th style="background:#144CCC;">Title</th>
            <th style="background:#144CCC;">Description</th>
            <th style="background:#144CCC;">For Sale</th>
            <th style="background:#144CCC;">Price</th>
			<th style="background:#144CCC;">Creation Date</th>
            <th style="background:#144CCC;"></th>
        </tr>
        </thead>




		
        <tbody>
       {% for prod in prods %}
        <tr>
                {% set imagePath = prod.productimage %}
                {% set parts = imagePath|split('/') %}
                {% set relativeImagePath = '/uploads/' ~ parts|last %}
            <td>{{prod.idProduct}}</td>
		    <td style=" width: 10px;">  <img src="{{ relativeImagePath }}" class="card-img-top" alt="{{ prod.title }}" style="height:100px;" ></img></td>
            <td>{{prod.title}}</td>
            <td>{{prod.description}}</td>
            <td>{{prod.forsale}}</td>
            <td>{{prod.price}}</td>
            <td>{{prod.creationdate}}</td>
			<td style=" width: 10px;"> <a href="{{ path('app_product_delete', {'idProduct': prod.idProduct}) }}" onclick="return confirm('Are you sure you want to delete this product?');">  <img src="{{asset('img/deleteUser.png')}}"  alt="Delete Product"></img> </a> </td>
           </tr>
		    {% endfor %}
      
             <tbody>
	  	
         </table>
	
	             </div>
            </li>


			
		</main>
		<!-- MAIN -->




	
</div>
	
	</li> 


{% endblock %}